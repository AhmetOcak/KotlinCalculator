<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/whiteM</item>
        <item name="android:backgroundTint">@color/darkBlue</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Button</item>
        <item name="android:onClick">number</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/whiteM</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Button</item>
    </style>

    <style name="buttonFunc">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/whiteM</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Button</item>
    </style>
</resources>